<%- include('includes/head') %>
  <%- include('includes/nav') %>
    <div class="container">
      <div class="row table-agenda">
        <div class="h1agenda">
          <h1 class="text-center">Agenda</h1>
          <p class="text-center lead">Seus contatos estão abaixo</p>
        </div>
        <%- include('includes/messages') %>
          <div class="col-lg-12 my-3">
            <% if(contatos.length> 0) { %>
              <div class="table-responsive">
                <table class="table table-striped my-3">
                  <% contatos.forEach(contato=> { %>
                    <tr>
                      <td>
                        <%= contato.nome %>
                      </td>
                      <td>
                        <%= contato.sobrenome %>
                      </td>
                      <td>
                        <%= contato.telefone %>
                      </td>
                      <td>
                        <%= contato.email %>
                      </td>
                      <td><a href="/contato-edit/contato/<%= contato._id %>"><svg stroke="currentColor"
                            fill="currentColor" stroke-width="0" viewBox="0 0 576 512" class="edit-button" height="1em"
                            width="1em" xmlns="http://www.w3.org/2000/svg">
                            <path
                              d="M402.6 83.2l90.2 90.2c3.8 3.8 3.8 10 0 13.8L274.4 405.6l-92.8 10.3c-12.4 1.4-22.9-9.1-21.5-21.5l10.3-92.8L388.8 83.2c3.8-3.8 10-3.8 13.8 0zm162-22.9l-48.8-48.8c-15.2-15.2-39.9-15.2-55.2 0l-35.4 35.4c-3.8 3.8-3.8 10 0 13.8l90.2 90.2c3.8 3.8 10 3.8 13.8 0l35.4-35.4c15.2-15.3 15.2-40 0-55.2zM384 346.2V448H64V128h229.8c3.2 0 6.2-1.3 8.5-3.5l40-40c7.6-7.6 2.2-20.5-8.5-20.5H48C21.5 64 0 85.5 0 112v352c0 26.5 21.5 48 48 48h352c26.5 0 48-21.5 48-48V306.2c0-10.7-12.9-16-20.5-8.5l-40 40c-2.2 2.3-3.5 5.3-3.5 8.5z">
                            </path>
                          </svg>
                        </a>
                      </td>
                      <td><a class="text-danger" href="/contato-edit/delete/<%= contato._id %>"><svg
                            stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 512 512"
                            class="delete" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg">
                            <path
                              d="M464 32H48C21.5 32 0 53.5 0 80v352c0 26.5 21.5 48 48 48h416c26.5 0 48-21.5 48-48V80c0-26.5-21.5-48-48-48zm-83.6 290.5c4.8 4.8 4.8 12.6 0 17.4l-40.5 40.5c-4.8 4.8-12.6 4.8-17.4 0L256 313.3l-66.5 67.1c-4.8 4.8-12.6 4.8-17.4 0l-40.5-40.5c-4.8-4.8-4.8-12.6 0-17.4l67.1-66.5-67.1-66.5c-4.8-4.8-4.8-12.6 0-17.4l40.5-40.5c4.8-4.8 12.6-4.8 17.4 0l66.5 67.1 66.5-67.1c4.8-4.8 12.6-4.8 17.4 0l40.5 40.5c4.8 4.8 4.8 12.6 0 17.4L313.3 256l67.1 66.5z">
                            </path>
                          </svg></a></td>
                    </tr>
                    <% }); %>
                </table>
              </div>
              <% } else { %>
                <p class="text-center lead">Não existem contatos na sua agenda.</p>
                <% } %>
          </div>
      </div>
    </div>
    <div class="container">
      <div id="theme" class="btn-group btn-theme-center" role="group">
        <button class="btn btn-outline-link" onclick="swapStyle('../../../frontend/assets/css/light.css')">Light
          Mode</button>
        <button class="btn btn-outline-link" onclick="swapStyle('../../../frontend/assets/css/dark.css')">Dark
          Mode</button>
        <script type="text/javascript">
          function swapStyle(sheet) {
            document.getElementById('mystylesheet').href = sheet;
          }
        </script>
      </div>
    </div>
    <%- include('includes/footer') %>